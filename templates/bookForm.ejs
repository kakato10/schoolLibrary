<table>
    <tr>
        <td>
            <label>Title: </label>
        </td>
        <td>
            <input id="book-title" type="text" value="<%= book.title %>">
        </td>
    </tr>
    <tr>
        <td>
            <label>Author's first name:: </label>
        </td>
        <td>
            <input id="authors-first-name" type="text" value="<%= book.authorsFirstName %>">
        </td>
    </tr>
    <tr>
        <td>
            <label>Author's family name: </label>
        </td>
        <td>
            <input id="authors-surname" type="text" value="<%= book.authorsSurname %>">
        </td>
    </tr>
</table>
<button data-dismiss="modal">Close</button>
<button id="save-book">Save changes</button>